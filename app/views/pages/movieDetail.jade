extends ../layout

block content
  .container
    .row
      .col-md-9
        video(src="../videos/#{movie.video}", width="720", height="600", type="video/mp4", controls="")
      .col-md-3
            dl.dl-horizontal
            dt 电影名字
            dd= movie.title
            dt 导演
            dd= movie.doctor
            dt 国家
            dd= movie.city
            dt 语言
            dd= movie.language
            dt 上映年份
            dd= movie.year
            dt 简介
            dd= movie.summary
    .row
      a.btn.btn-primary(href="#{movie.video}") 下载