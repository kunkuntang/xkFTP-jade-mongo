extends ../layout

block content
  .container
    .row
      table.table.talbe-hover.table-bordered
        thead
          tr
            th userName
            th time
            th edit
            th 删除
        tbody
          each item in users
            tr(class="item-id-#{item._id}")
              td #{item.name}
              td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
              td: a(target="_blank", href="../update/#{item._id}") 修改
              //- td: a.btn.btn-danger.del(href="../v1/deletMovie/#{item._id}") 删除
              td: button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除
  script(src="/js/admin.js")
 