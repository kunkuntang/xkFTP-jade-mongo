extends ../../layout

block content
  .container
    .row
      table.table.talbe-hover.table-bordered
        thead
          tr
            th 软件名字
            th 年份
            th 录入时间
            th 查看
            th 更新
            th 删除
        tbody
          each item in softwares
            tr(class="item-id-#{item.id}")
              td #{item.name}
              td #{item.year}
              td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
              td: a(target="_blank", href="../software/#{item._id}") 查看
              td: a(target="_blank", href="updateSoftware/#{item._id}") 修改
              //- td: a.btn.btn-danger.del(href="../v1/deletMovie/#{item._id}") 删除
              td: button.btn.btn-danger.delSoftware(type="button", data-id="#{item._id}") 删除
  script(src="/js/admin.js")
 