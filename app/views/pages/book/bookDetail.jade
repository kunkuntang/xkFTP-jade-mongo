extends ../../layout

block content
  .container
    .row
      .col-md-9
        video(src="../videos/#{book.video}", width="720", height="600", type="video/mp4", controls="")
      .col-md-3
            dl.dl-horizontal
            dt 电影名字
            dd= book.title
            dt 导演
            dd= book.doctor
            dt 国家
            dd= book.city
            dt 语言
            dd= book.language
            dt 上映年份
            dd= book.year
            dt 简介
            dd= book.summary
    .row
      a.btn.btn-primary(href="#{book.video}") 下载